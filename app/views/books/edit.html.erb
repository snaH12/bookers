<h1>編集画面</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

 <h4>タイトル</h4>
 <%= f.text_field :title %>
 
 <h4>感想</h4>
 <%= f.text_area :body %>
 
 <%= f.submit '更新' %>
 
<% end %>